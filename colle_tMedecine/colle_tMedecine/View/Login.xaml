<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity" xmlns:pi="http://schemas.microsoft.com/prototyping/2010/interactivity" xmlns:local="clr-namespace:colle_tMedecine.View" x:Name="login"
	xmlns:ff="clr-namespace:colle_tMedecine.Helper"
    mc:Ignorable="d"
	x:Class="colle_tMedecine.View.Login"
	Width="640" Height="480">

	<Grid x:Name="LayoutRoot" Background="White">
        <TextBox x:Name="Login_text" Text="{Binding LoginInput}" Margin="249,176,191.446,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <PasswordBox x:Name="Password" ff:PasswordHelper.Attach="True"  ff:PasswordHelper.Password="{Binding PasswordInput, Mode=TwoWay}" Margin="249,211,191.446,0" VerticalAlignment="Top"/>
        <Button x:Name="Connection" Command="{Binding Connect}" Content="Se connecter" Margin="300,0,248,182" VerticalAlignment="Bottom" Background="{x:Null}">
		</Button>
		<Label Content="Veuillez vous connecter" HorizontalAlignment="Right" Margin="0,146.04,223.672,0" VerticalAlignment="Top"/>
		<TextBlock x:Name="Idendifiant" HorizontalAlignment="Left" Height="21.96" Margin="158,176,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="87"><Run Language="fr-fr" Text="Identifiant"/></TextBlock>
		<TextBlock x:Name="MDP" HorizontalAlignment="Left" Height="21.96" Margin="158,208.84,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="87"><Run Language="fr-fr" Text="Mot de passe"/></TextBlock>
	</Grid>
</UserControl>